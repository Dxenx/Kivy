<MenuScreen>:
    name:'menuscreen'
    id:GL1
    AnchorLayout: #Варианты игры
        anchor_x: 'center'
        anchor_y: 'center'
        GridLayout:
            size_hint:1,0.85
            id:Grid_1
            rows:3
            spacing:1
            MDRaisedButton:
                id:menubutton11
                size_hint:0.3,0.02
                text:'10 вопросов'
                on_release:
                    root.PlayType(1)
            MDRaisedButton:
                id:menubutton12
                size_hint:0.3,0.02
                text:'20 вопросов'
                on_release:
                    root.PlayType(2)
            MDRaisedButton:
                id:menubutton13
                size_hint:0.3,0.02
                text:'30 вопросов'
                on_release:
                    root.PlayType(3)
            MDRaisedButton:
                id:menubutton17
                size_hint:0.3,0.02
                text:'1 минута'
                on_release:
                    root.PlayType(6)
            MDRaisedButton:
                id:menubutton18
                size_hint:0.3,0.02
                text:'2 минуты'
                on_release:
                    root.PlayType(7)
            MDRaisedButton:
                id:menubutton19
                size_hint:0.3,0.02
                text:'3 минуты'
                on_release:
                    root.PlayType(8)
            MDRaisedButton:
                id:menubutton14
                size_hint:0.3,0.02
                text:'1 ошибка'
                on_release:
                    root.PlayType(4)
            MDRaisedButton:
                id:menubutton15
                size_hint:0.3,0.02
                text:'3 ошибки'
                on_release:
                    root.PlayType(5)
    AnchorLayout: #nickname и список тем
        anchor_x:'center'
        anchor_y:'top'
        BoxLayout:
            id:menutop1
            size_hint:0.8,0.08
            anchor_x: 'center'
            anchor_y: 'top'
            orientation:'vertical'
            AnchorLayout:
                id:menutop2
                MDRoundFlatButton:
                    anchor_x: 'center'
                    anchor_y: 'top'
                    size_hint:0.9,0.6
                    id:Theme
                    text:'Список тем²'
                    on_release:
                        root.show_popup()
<Quiz>:
    id:QuizStart
    name:'quiz'
    on_enter:
        root.TextVkl()
        root.start_timer()
        app.Playq()
    FloatLayout: #Счёт и таймер
        pos_hint:{'right':1,'top':1}
        BoxLayout:
            orientation:'vertical'
            pos_hint:{'right':0.95,'top':1}
            size_hint:.2,.2
            Label:
                color: 1,0,1,1
                id:Score_Label
                size_hint:0.2,0.15
                pos_hint:{'right':0.85,'top':1}
                text:'Вопрос номер: 1'
            Label:
                color: 1,0,1,1
                id:Label_timer
                size_hint:0.2,0.15
                pos_hint:{'right':1,'top':1}
                text:''
    BoxLayout: #Кнопка выход,вопрос и ответы.
        id:BoxL_Q
        orientation: 'vertical'
        MDRoundFlatIconButton:
            icon:'logout'
            size_hint:0.1,0.1
            pos_hint:{'x':0, 'top':1}
            on_release:
                root.manager.current ='menuscreen'
                root.Restart_Score_and_timer()
        Label:
            id:Label_text
            color:1,0,1,1
            text: ""
            size_hint: 1,1
            pos_hint: {'x':0, 'top':1}
        GridLayout:
            spacing:1
            size_hint:1,1
            pos_hint:{'center_x':0.5,'center_y':0.5}
            rows:2
            MDRaisedButton:
                size_hint:1,1
                id:Ans
                md_bg_color:(0.50,0.1,0.79,1)
                text: ""
                on_release:
                    root.Type_or_Score(1)
            MDRaisedButton:
                size_hint:1,1
                id:Ans2
                text:""
                md_bg_color:(0.50,0.1,0.79,1)
                on_release:
                    root.Type_or_Score(2)
            MDRaisedButton:
                size_hint:1,1
                id:Ans3
                md_bg_color:(0.50,0.1,0.79,1)
                text:""
                on_release:
                    root.Type_or_Score(3)
            MDRaisedButton:
                size_hint:1,1
                id:Ans4
                md_bg_color:(0.50,0.1,0.79,1)
                text:""
                on_release:
                    root.Type_or_Score(4)
